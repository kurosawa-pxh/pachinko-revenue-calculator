# Features Configuration
ENABLE_OFFLINE = "true"
ENABLE_EXPORT = "true"
ENABLE_ADVANCED_STATS = "true"
ENABLE_DB_ENCRYPTION = "true"

# Free Tier Limits (Supabase)
MAX_USERS = "100"
MAX_SESSIONS_PER_USER = "1000"
MAX_DB_SIZE_MB = "50"
