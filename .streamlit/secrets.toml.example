# Logging Configuration
LOG_LEVEL = "INFO"
LOG_TO_CONSOLE = "true"
LOG_TO_FILE = "false"

# Deployment Configuration
DEPLOYMENT_PLATFORM = "streamlit_cloud"
ENABLE_CACHING = "true"
CACHE_TTL = "300"
RATE_LIMIT = "100"
MAX_UPLOAD_SIZE = "10485760"
HEALTH_CHECK_ENABLED = "true"